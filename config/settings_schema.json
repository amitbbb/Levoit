      {
        "type": "text",
        "id": "email",
        "label": "Email",
        "default": "support@cosori.com"
      },
      {
        "type": "url",
        "id": "help_center_url",
        "label": "Help center URL"
      },
      {
        "type": "link_list",
        "id": "help_center_menu",
        "label": "Help center menu"
      }
    ]
