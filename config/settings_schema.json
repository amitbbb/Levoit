  {
    "name": "Color swatch",
    "settings": [
      {
        "type": "textarea",
        "id": "color_swatch_config",
        "label": "Configuration",
        "placeholder": "Red:#ff0000\nGreen:#00ff00\nBlue:#0000ff",
        "info": "Each rule must be in its own line.",
        "default": "Black:#000000\nOrange:#ffa500\nWhite:#FFFFFF\nMatte Black:#000000\nStainless Steel:#d3d3d3"
      }
    ]
  },
  {
    "name": "Compare + Favorites",
    "settings": [
      {
        "type": "page",
        "id": "compare_page",
        "label": "Compare page"
      },
      {
        "type": "page",
        "id": "favorites_page",
        "label": "Favorites page"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "options": [
          {
            "value": "page",
            "label": "t:settings_schema.cart.settings.cart_type.page.label"
          },
          {
            "value": "drawer",
            "label": "t:settings_schema.cart.settings.cart_type.drawer.label"
          }
        ],
        "default": "drawer",
        "label": "t:settings_schema.cart.settings.cart_type.label"
      },
      {
        "type": "checkbox",
        "id": "show_cart_note",
        "label": "Show cart note",
        "default": false
      },
      {
        "type": "header",
        "content": "Cart Upsells"
      },
      {
        "type": "text",
        "id": "cart_upsells_title",
        "label": "Cart upsells title",
        "default": "You may also like"
      },
      {
        "type": "collection",
        "id": "cart_upsells",
        "label": "Cart upsells"
      }
    ]
  },
  {
    "name": "t:settings_schema.search_input.name",
