<search-drawer>
  <details id="">
    <summary aria-label="Search">
      {% render 'icons' with 'search', width: 25, height: 25 %}
    </summary>
    <aside class="z-40 fixed top-0 bottom-0 left-0 bg-white w-[40rem] max-w-[calc(100vw-3rem)] transition-all ease-out-expo duration-300">
      <div class="flex flex-col overflow-y-auto gap-4 p-4 h-full">
        <header class="relative flex justify-center">
          <button class="drawer__close absolute top-1/2 -translate-y-1/2 right-0">
            {%- render 'icons' with 'close' -%}
          </button>
          <a href="{{ routes.root_url }}" class="mx-auto">
            {%- if logo != blank -%}
              {%- assign logo_alt = logo.alt | default: shop.name | escape -%}
              {%- assign logo_height = logo_width | divided_by: logo.aspect_ratio -%}

              {{
                logo
                | image_url: width: section.settings.width
                | image_tag:
                  class: 'header__heading-logo py-2',
                  widths: '50, 100, 150, 200, 250, 300, 400, 500',
                  height: logo_height,
                  width: logo_width,
                  alt: logo_alt
              }}

            {%- else -%}
              {{ shop.name }}
            {%- endif -%}
          </a>
        </header>
        {% render 'search-component', aside_class: 'mt-4', limit: 10 %}
      </div>
    </aside>
  </details>
</search-drawer>
